.header
	width 100%
	height 500px
	.banner
		width 100%
		height 500px
		position relative
		top -90px
		left 0
		overflow hidden
		.slidebox
			width 100%
			height 500px
			position relative
			li
				width 100%
				height 500px
				position relative
				img
					display block
					width 100%
					height 500px
				&>div
					position absolute
					top 90px
					left 50%
					transform translateX(-50%)
					width 1200px
					color #fff
					text-align center
					h1
						font-size 48px
						font-weight 100
						padding 15px 0
						margin 52px 0 15px
					h2
						font-size 20px
						font-weight 100
						margin-bottom 37px
					a
						display block
						margin 0 auto
						width 180px
						height 42px
						line-height 42px
						font-size 16px
						color #fff
						background-color #00A2CA
						border 1px solid #00A2CA
						transition all 0.3s cubic-bezier(.645,.045,.355,1)
						&:hover
							background-color #33b5d5
							border-color #33b5d5
				&>a
					display block
					position absolute
					top 90px
					left 19%
					width 1200px
					height auto
					color #fff
					h1
						font-size 48px
						font-weight 100
						padding 15px 0
						margin 52px 0 15px
					h2
						font-size 20px
						font-weight 100
						margin-bottom 37px
					span
						display inline-block
						width 180px
						height 42px
						font-size 16px
						margin-top 20px
						text-align center
						vertical-align middle
						line-height 42px						
						background-color transparent
						border 1px solid #fff
						transition all 0.3s cubic-bezier(.645,.045,.355,1)
						&:hover
							background-color rgba(255,255,255,.2)	
		.dot
			position absolute
			width 100% 
			height 30px 
			text-align center
			top 410px
			left 0
			p
				width 100%
				height auto
			b
				width 16px
				height 16px
				border-radius 8px
				display inline-block
				background rgba(255,255,255,0.5)
				text-align center
				margin 0 5px 
				cursor pointer
			.cur
				background #fff
	.navbar
		position relative
		margin 0 auto
		width 1200px
		height 90px
		z-index 5
		.navbar-logo
			display block
			float left
			width 148px
			height 90px
			background-image url(../img/logo.png)
			background-repeat no-repeat
			background-position center
		.navbar-nav
			width 568px
			height 90px
			position relative
			left 72px
			float left
			>li
				float left
				&:hover
					background-color #00A2CA
					transition background-color 0.4s linear 0.4s
				&:hover>div
					max-height 300px
					transition-delay 0.4s
				>a
					display block
					color #fff
					font-size 16px
					font-weight 200;
					line-height 90px
					padding 0 18px
				>div
					width 928px
					height auto
					max-height 0
					background-color #fff
					position absolute
					top 90px
					left 0
					display block
					overflow hidden
					transition max-height 0.4s linear 0s
					>ul
						width 878px
						margin 25px 25px 10px
						>li
							width 368px
							float left
							margin-right 40px
							margin-bottom 20px
							a
								display block
								font-size 14px
								line-height 18.5px
								color #333
								&:hover
									color #00a2ca
							p
								font-size 12px
								line-height 15.5px
								color #8e8e8e
						
		.navbar-user
			width 306px
			height 90px
			float right
			position relative
			>li
				float left
				cursor pointer
				&:hover>div
					display block
				>a
					display block
					color #fff
					font-size 14px
					line-height 90px
					padding 0 20.5px
				>div
					display none
					position absolute
					top 90px
					right 0
					width 140px
					max-height 300px
					padding 17px 0 0 20px
					background-color #fff
					>a
						display block
						font-size 12px
						line-height 36px
						color #333
						&:hover
							color #00a2ca
				&>.navbar-user-btn
					width 16px
					height 11px
					margin 39px 0
					margin-left 16px
					background url(../img/navbar-user-btn.png) no-repeat					
